{
  "name": "@godcli/wrapper",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/wrapper/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "updateBuildableProjectDepsInPackageJson": true,
        "outputPath": "dist/libs/wrapper",
        "tsConfig": "libs/wrapper/tsconfig.lib.json",
        "packageJson": "libs/wrapper/package.json",
        "main": "libs/wrapper/src/index.ts",
        "assets": ["libs/wrapper/*.md"]
      }
    },
    "build_webpack": {
      "executor": "@nx/webpack:webpack",
      "verbose": true,
      "cache": false,
      "defaultConfiguration": "production",
      "options": {
        "webpackConfig": "libs/wrapper/webpack.config.js",
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/libs/wrapper",
        "main": "libs/wrapper/src/index.ts",
        "tsConfig": "libs/wrapper/tsconfig.spec.json",
        "isolatedConfig": true,
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "sourceMap": false,
          "externalDependencies": "all",
          "vendorChunk": true,
          "webpackConfig": "libs/wrapper/webpack.config.js",
          "isolatedConfig": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/wrapper/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/wrapper/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },

    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventionalcommits",
        "baseBranch": "HEAD:main",
        "tagPrefix": "@gcl/wrapper-",
        "push": true,
        "trackDeps": true,
        "commitMessageFormat": "chore({projectName}): release version {version} [skip ci]",
        "postTargets": ["npm", "github"]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}
